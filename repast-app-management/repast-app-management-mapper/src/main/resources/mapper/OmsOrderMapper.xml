  <select id="getOrderAndShopInfo" parameterType="java.lang.Long" resultMap="Map">
    SELECT DISTINCT
    oo.order_sn,
    oo.create_time,
    oo.total_amount,
    oo.pay_amount,
    oo.order_type,
    usi.name,
    usi.id,
    usi.images,
    oo.order_status,
    usi.phone
    FROM
    oms_order oo
    INNER JOIN ums_shop_information usi ON oo.shop_id = usi.id
    WHERE
    oo.member_id =#{param1}
    <choose>
      <when test="param2==0">
        and order_status =0
      </when>
      <when test="param2==1">
        and order_status =1
      </when>
      <when test="param2==2">
        and order_status =2
      </when>
      <when test="param2==3">
        and order_status =3
      </when>
      <when test="param2==4">
        and order_status =4
      </when>
      <when test="param2==5">
        and order_status =5
      </when>
      <otherwise>
        AND 1 = 1
      </otherwise>
    </choose>
    ORDER BY
    oo.create_time DESC

