  <insert id="setOmsOrder" parameterType="com.aaa.lee.app.domain.OmsOrder">
    insert  into oms_order (
    member_id,
    shop_id,
    order_sn,
    create_time,
    member_username,
    total_amount,
    pay_amount
    )
    values(
     #{memberId},
      #{shopId},
      #{orderSn},
      #{createTime},
      #{memberUsername},
      #{totalAmount},
      #{payAmount}
    )
  </insert>
